{
	"version": 2,
	"buildCommand": "mkdir -p node_modules/.pnpm/sqlite3@5.1.7/node_modules && touch node_modules/.pnpm/sqlite3@5.1.7/node_modules/sqlite3.js && pnpm build",
	"outputDirectory": "packages/cli/dist",
	"installCommand": "pnpm install --ignore-scripts",
	"env": {
		"DB_TYPE": "postgresdb",
		"DB_POSTGRESDB_DATABASE": "${POSTGRES_DATABASE}",
		"DB_POSTGRESDB_HOST": "${POSTGRES_HOST}",
		"DB_POSTGRESDB_PORT": "${POSTGRES_PORT}",
		"DB_POSTGRESDB_USER": "${POSTGRES_USER}",
		"DB_POSTGRESDB_PASSWORD": "${POSTGRES_PASSWORD}",
		"DB_POSTGRESDB_SSL_ENABLED": "true",
		"N8N_ENCRYPTION_KEY": "${N8N_ENCRYPTION_KEY}",
		"N8N_PORT": "8080",
		"NODE_ENV": "production",
		"EXECUTIONS_PROCESS": "main",
		"SKIP_PYTHON_MODULES": "true"
	},
	"functions": {
		"packages/cli/dist/index.js": {
			"memory": 1024
		}
	},
	"rewrites": [{ "source": "/(.*)", "destination": "/packages/cli/dist/index.js" }]
}
